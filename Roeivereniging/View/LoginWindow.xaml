<Window x:Class="View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="ImgLogo" HorizontalAlignment="Center" Height="100" Margin="0,-200,0,0" VerticalAlignment="Center" Width="100" Source="/Resources/Logo.png"/>
        <TextBox x:Name="PbPassword" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center" Width="120"/>
        <TextBox x:Name="TbUsername" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Gebruikersnaam" VerticalAlignment="Center" Width="120"/>
        <Button x:Name="BtnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,256,0,0" VerticalAlignment="Top" Height="23" Width="120" Click="BtnLogin_Click"/>

    </Grid>
</Window>
