<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanResize" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid>
        <StackPanel x:Name="Header" Orientation="Horizontal" Height="50" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Button x:Name="BtnReserveer" Content="Reserveer" MinWidth="100"></Button>
            <Button x:Name="BtnReserveringen" Content="Geschiedenis" MinWidth="100" Margin="10,0,0,0" Click="BtnReserveringen_Click"></Button>
        </StackPanel>
        <Frame Name="Frame" Margin="0,50,0,0" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
