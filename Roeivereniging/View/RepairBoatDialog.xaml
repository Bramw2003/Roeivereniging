<Window x:Class="View.RepairBoatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="" Height="421" Width="587">
    <Grid x:Name="grid" Loaded="Grid_Loaded">
        <Label Content="{Binding boat.name}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"></Label>
        <Label Content="{Binding boat.type}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0"></Label>
        <Label Content="Reparatie beschrijving" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top"/>
        <TextBox Margin="20,85,20,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="230"/>
        <Button Content="Button" HorizontalAlignment="Stretch" Margin="20,0,20,20" VerticalAlignment="Bottom" Height="59" Width="547" Click="Button_Click"/>
    </Grid>
</Window>
